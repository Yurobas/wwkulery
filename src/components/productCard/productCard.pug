mixin productCard()
  <div class="productCard">
    <div class="productCard__content">
      <div class="productCard__picture">
        <img src="/src/images/product.png" alt="Фильтр" class="productCard__image">
        <ul class="productCard__water">
          <li class="productCard__water-item productCard__water-item--hot">
            <img src="/src/images/icons/water-hot.svg" alt="Горячая" class="productCard__water-icon">
            <span class="productCard__water-value">12л / час</span>
          </li>
          <li class="productCard__water-item productCard__water-item--cold">
            <img src="/src/images/icons/water-cold.svg" alt="Холодная" class="productCard__water-icon">
            <span class="productCard__water-value">12л / час</span>
          </li>
          <li class="productCard__water-item productCard__water-item--normal">
            <img src="/src/images/icons/water-normal.svg" alt="Комнатная" class="productCard__water-icon">
            <span class="productCard__water-value">12л / час</span>
          </li>
          <li class="productCard__water-item productCard__water-item--gas">
            <img src="/src/images/icons/water-gas.svg" alt="Комнатная" class="productCard__water-icon">
            <span class="productCard__water-value">12л / час</span>
          </li>
        </ul>
      </div>
      <div class="productCard__info">
        <div class="productCard__name">WiseWater 105</div>
